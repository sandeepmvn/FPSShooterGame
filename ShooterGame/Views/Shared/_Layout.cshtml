<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FPS Game with Shooting, Score, and Bootstrap 5</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            margin: 0;
            overflow: hidden;
            font-family: sans-serif;
        }

        canvas {
            display: block;
        }

        #instructions {
            position: absolute;
            width: 100%;
            height: 100%;
            background-color: rgba(0,0,0,0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            color: white;
            font-size: 24px;
            text-align: center;
        }

        #score {
            position: absolute;
            top: 10px;
            left: 10px;
            font-size: 24px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 5px;
        }

        #shoot-info {
            position: absolute;
            top: 50px;
            left: 10px;
            font-size: 18px;
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 10px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    
    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r128/three.min.js"></script>

    <script>
        let camera, scene, renderer;
        let player, velocity = new THREE.Vector3();
        let controlsEnabled = false;
        let moveForward = false, moveBackward = false, moveLeft = false, moveRight = false;
        const speed = 400.0;
        const bullets = [];
        const bulletSpeed = 500;
        let prevTime = performance.now();

        // Score
        let score = 0;

        // Enemies array
        const enemies = [];
        const enemySpeed = 0.5;

        init();
        animate();

        function init() {
            renderer = new THREE.WebGLRenderer();
            renderer.setSize(window.innerWidth, window.innerHeight);
            document.body.appendChild(renderer.domElement);

            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x87CEEB);

            camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 1, 1000);
            player = new THREE.Object3D();
            player.add(camera);
            scene.add(player);

            const floorGeometry = new THREE.PlaneGeometry(2000, 2000);
            const floorMaterial = new THREE.MeshBasicMaterial({ color: 0x00ff00 });
            const floor = new THREE.Mesh(floorGeometry, floorMaterial);
            floor.rotation.x = -Math.PI / 2;
            floor.position.y = -10;
            scene.add(floor);

            // Pointer Lock API
            const instructions = document.getElementById('instructions');
            instructions.addEventListener('click', function () {
                instructions.style.display = 'none';
                document.body.requestPointerLock();
            });

            document.addEventListener('pointerlockchange', function () {
                controlsEnabled = document.pointerLockElement === document.body;
            });

            document.addEventListener('keydown', function (event) {
                switch (event.code) {
                    case 'ArrowUp':
                    case 'KeyW':
                        moveForward = true;
                        break;
                    case 'ArrowLeft':
                    case 'KeyA':
                        moveLeft = true;
                        break;
                    case 'ArrowDown':
                    case 'KeyS':
                        moveBackward = true;
                        break;
                    case 'ArrowRight':
                    case 'KeyD':
                        moveRight = true;
                        break;
                    case 'Space':
                        shoot();  // Add shooting functionality to spacebar
                        break;
                }
            });

            document.addEventListener('keyup', function (event) {
                switch (event.code) {
                    case 'ArrowUp':
                    case 'KeyW':
                        moveForward = false;
                        break;
                    case 'ArrowLeft':
                    case 'KeyA':
                        moveLeft = false;
                        break;
                    case 'ArrowDown':
                    case 'KeyS':
                        moveBackward = false;
                        break;
                    case 'ArrowRight':
                    case 'KeyD':
                        moveRight = false;
                        break;
                }
            });

            document.addEventListener('mousemove', function (event) {
                if (controlsEnabled) {
                    const movementX = event.movementX || 0;
                    const movementY = event.movementY || 0;
                    player.rotation.y -= movementX * 0.002;
                    camera.rotation.x -= movementY * 0.002;
                    camera.rotation.x = Math.max(-Math.PI / 2, Math.min(Math.PI / 2, camera.rotation.x));
                }
            });

            // Mouse click to shoot
            document.addEventListener('mousedown', shoot);

            // Add enemies
            for (let i = 0; i < 5; i++) {
                addEnemy();
            }
        }

        // Function to add an enemy
        function addEnemy() {
            const enemyGeometry = new THREE.BoxGeometry(2, 2, 2);
            const enemyMaterial = new THREE.MeshBasicMaterial({ color: 0x0000ff }); // Blue color for enemies
            const enemy = new THREE.Mesh(enemyGeometry, enemyMaterial);

            enemy.position.set(
                Math.random() * 100 - 50,  // Random X position
                0,                         // Y position (ground level)
                Math.random() * 100 - 50   // Random Z position
            );

            enemies.push(enemy);
            scene.add(enemy);
        }

        // Function to shoot
        function shoot() {
            const bulletGeometry = new THREE.SphereGeometry(0.2, 8, 8);
            const bulletMaterial = new THREE.MeshBasicMaterial({ color: 0xff0000 }); // Red color for bullets
            const bullet = new THREE.Mesh(bulletGeometry, bulletMaterial);

            // Position bullet at the player's camera position
            bullet.position.copy(camera.position);

            // Set the bullet's direction to where the camera is looking
            const direction = new THREE.Vector3();
            camera.getWorldDirection(direction);
            bullet.userData = {
                velocity: direction.multiplyScalar(bulletSpeed)
            };

            bullets.push(bullet);
            scene.add(bullet);
        }

        function animate() {
            requestAnimationFrame(animate);

            if (controlsEnabled) {
                const time = performance.now();
                const delta = (time - prevTime) / 1000;

                // Update player movement
                velocity.x -= velocity.x * 10.0 * delta;
                velocity.z -= velocity.z * 10.0 * delta;

                if (moveForward) velocity.z -= speed * delta;
                if (moveBackward) velocity.z += speed * delta;
                if (moveLeft) velocity.x -= speed * delta;
                if (moveRight) velocity.x += speed * delta;

                player.translateX(velocity.x * delta);
                player.translateZ(velocity.z * delta);

                // Update bullets
                updateBullets(delta);

                // Update enemies
                updateEnemies(delta);

                prevTime = time;
            }

            renderer.render(scene, camera);
        }

        // Function to update bullets
        function updateBullets(delta) {
            bullets.forEach((bullet, index) => {
                bullet.position.add(bullet.userData.velocity.clone().multiplyScalar(delta));

                // Check if the bullet hits an enemy
                enemies.forEach((enemy, enemyIndex) => {
                    if (bullet.position.distanceTo(enemy.position) < 1) { // Simple collision check
                        // Remove enemy and bullet on collision
                        scene.remove(enemy);
                        scene.remove(bullet);
                        enemies.splice(enemyIndex, 1);
                        bullets.splice(index, 1);

                        // Increase the score when an enemy is hit
                        score += 1;
                        document.getElementById('score').innerHTML = `Score: ${score}`;
                    }
                });
            });
        }

        // Update enemy movement
        function updateEnemies(delta) {
            enemies.forEach(enemy => {
                const direction = new THREE.Vector3();
                direction.subVectors(player.position, enemy.position).normalize();
                enemy.position.addScaledVector(direction, enemySpeed * delta);
            });
        }
    </script>

  
</body>
</html>



